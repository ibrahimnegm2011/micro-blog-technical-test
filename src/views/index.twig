<!doctype html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Micro Blog - Memiah Limited">
    <meta name="author" content="Ibrahim Negm">

    <title>Micro Blog</title>

    <!-- Bootstrap Core CSS -->
    <link href="http://micro-blog.dev/assets/stylesheets/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="http://micro-blog.dev/assets/stylesheets/style.css" rel="stylesheet">

    <!-- jQuery -->
    <script src="http://micro-blog.dev/assets/javascript/jquery.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="http://micro-blog.dev/assets/javascript/bootstrap.min.js"></script>
    <!-- post js object to handle all action about posts -->
    <script src="http://micro-blog.dev/assets/javascript/blogModule.js"></script>

</head>
<body>

<!-- Navigation -->
<nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse"
                    data-target="#bs-example-navbar-collapse-1">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/">Micro Blog</a>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <ul class="nav navbar-nav">
                {#<li>#}
                    {#<a href="/dashboard">Dashboard</a>#}
                {#</li>#}
            </ul>
        </div>
        <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
</nav>

<!-- Page Content -->
<div class="container">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-8">
            <h1 class="page-header"> {{ title }} </h1>
        </div>
    </div>
    <div class="pull-right">
        <button id="createPostBtn" type="button" class="btn btn-primary">
            Create Post
        </button>
    </div>
    <!-- /.row -->

    <div id="postContainer">
        {% for post in posts %}
            <div class="row">
                <div class="col-md-12">
                    <h5><i>Created By : </i> <a href="/posts/user/{{ post.user_id }}">{{ post.name }}</a></h5>
                    <h5><i>date : </i> {{ post.date|date('d M Y') }}</h5>
                    <p>{{ post.content }}</p>
                    <div class="pull-right">
                        <a class="btn btn-success" href="/posts/{{ post.rowid }}">
                            View
                            <span class="glyphicon glyphicon-eye-open"></span>
                        </a>
                        <button class="btn btn-info editPostBtn" data-rowid="{{ post.rowid }}">
                            Edit
                            <span class="glyphicon glyphicon-edit"></span>
                        </button>
                        <button class="btn btn-danger deletePostBtn" data-rowid="{{ post.rowid }}">
                            Delete
                            <span class="glyphicon glyphicon-remove"></span>
                        </button>
                    </div>
                </div>
            </div>
        {% else %}
            <h4> There is no posts published yet</h4>
        {% endfor %}

        <hr>
    </div>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright Â© Memiah Limited 2016</p>
            </div>
        </div>
        <!-- /.row -->
    </footer>

    {{ include('create_post_modal.html') }}

</div>
<!-- /.container -->

</body>
</html>
